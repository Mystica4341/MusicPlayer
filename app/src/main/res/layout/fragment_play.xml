<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV_play"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:backgroundTint="#CCCCCC"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/v" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="40dp"
                android:layout_gravity="center"
                android:textSize="24dp"
                android:layout_marginLeft="40dp"
                android:text="Bài hát đang phát" />

            <TextView

                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgMusicPlay"
            android:layout_width="340dp"
            android:layout_height="340dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/albumdefault" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSongName"
                    android:layout_width="350dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Giàu vì bạn sang vì vợ"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvArtistName"
                    android:layout_width="350dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="RPT MCK"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBarPlay"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="28dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDurationStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00" />

                <TextView
                    android:id="@+id/tvDurationEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:text="00:00" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPlayList_play"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/playlistsong2"
                android:text="Button" />

            <Button
                android:id="@+id/btnPrev_play"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/next1"
                android:text="Button" />

            <Button
                android:id="@+id/btnPause_play"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/play" />

            <Button
                android:id="@+id/btnNext_play"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/next"
                android:text="Button" />

            <Button
                android:id="@+id/btnTim_play"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:background="@drawable/tanghinh"
                android:drawableLeft="@drawable/tim"
                android:text="Button" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>